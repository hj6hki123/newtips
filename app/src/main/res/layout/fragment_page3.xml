<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#9472CF"
        android:gravity="center"
        android:alpha="0.5">
        <TextView
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:text="色溫燈"
            android:textColor="#FFFEFE"
            android:textSize="30sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/SPClight_btn_white"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:text="白光"
            android:textColor="#F9FFF7"
            android:textSize="30sp" />
        <SeekBar
            android:id="@+id/seekbar1"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:max="255"
            android:progress="60"
            />
        <Button
            android:id="@+id/SPClight_btn_yellow"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape"
            android:text="黃光"
            android:textColor="#F9FFF7"
            android:textSize="30sp" />
        <SeekBar
            android:id="@+id/seekbar2"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:max="255"
            android:progress="60"
            />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#5364C1"
        android:gravity="center"
        android:alpha="0.5"
        >

        <TextView
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:text="RGB燈條"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:gravity="center"
            android:layout_marginBottom="20dp"/>

        <Button
            android:id="@+id/NORlight_btn_red"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:background="@drawable/buttonshape"
            android:text="紅光"
            android:textColor="#F9FFF7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/NORlight_btn_green"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape"
            android:text="綠光"
            android:textColor="#F9FFF7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/NORlight_btn_blue"
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/buttonshape"
            android:text="藍光"
            android:textColor="#F9FFF7"
            android:textSize="30sp" />





    </LinearLayout>
</LinearLayout>